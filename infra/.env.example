# TechBirdsFly Infrastructure Environment Variables

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Alisheikh@123
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.UTF-8

# ============================================================================
# KAFKA & SCHEMA REGISTRY
# ============================================================================
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://kafka:9092
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1

SCHEMA_REGISTRY_HOST_NAME=schema-registry
SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=kafka:29092
SCHEMA_REGISTRY_KAFKASTORE_TOPIC_REPLICATION_FACTOR=1

# ============================================================================
# OBSERVABILITY
# ============================================================================
ACCEPT_EULA=Y
COLLECTOR_ZIPKIN_HTTP_PORT=9411

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Redis
REDIS_CONNECTION_STRING=redis:6379

# Database connections (services will use these)
AUTH_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_auth;Username=postgres;Password=Alisheikh@123
EVENTBUS_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_eventbus;Username=postgres;Password=Alisheikh@123
BILLING_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_billing;Username=postgres;Password=Alisheikh@123
GENERATOR_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_generator;Username=postgres;Password=Alisheikh@123
ADMIN_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_admin;Username=postgres;Password=Alisheikh@123
USER_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_user;Username=postgres;Password=Alisheikh@123
IMAGE_SERVICE_DB=Host=postgres;Port=5432;Database=techbirdsfly_image;Username=postgres;Password=Alisheikh@123
GATEWAY_DB=Host=postgres;Port=5432;Database=techbirdsfly_gateway;Username=postgres;Password=Alisheikh@123

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# Observability
SEQ_URL=http://seq:5341
JAEGER_AGENT_HOST=jaeger
