{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=techbirdsfly_admin;User Id=postgres;Password=password;"
  },
  "EventBusService": {
    "Url": "http://localhost:5020"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/admin-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "OpenTelemetry": {
    "ServiceName": "AdminService",
    "ServiceVersion": "1.0.0",
    "JaegerExporter": {
      "AgentHost": "localhost",
      "AgentPort": 6831
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true
    },
    "EventBus": {
      "Enabled": true,
      "Url": "http://localhost:5020/health"
    }
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Admin Service API",
    "Description": "Admin Service for managing system administrators, roles, and audit logs",
    "Version": "v1",
    "ContactName": "TechBirdsFly",
    "ContactEmail": "support@techbirdsfly.com"
  }
}
